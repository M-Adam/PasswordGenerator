<Window x:Class="PasswordGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordGenerator"
        mc:Ignorable="d"
        Title="PasswordGenerator" Height="132.132" Width="341.282" ResizeMode="NoResize" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="PasswordBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="NoWrap" IsReadOnly="True" Text="" VerticalAlignment="Top" Width="248"/>
        <Button x:Name="GenerateBtn" Content="Create" HorizontalAlignment="Left" Margin="251,10,0,0" VerticalAlignment="Top" Width="67" Height="23" IsDefault="True" Click="generateBtn_Click"/>
        <CheckBox x:Name="CapitalsCb" Content="Capitals" Margin="63,38,0,0" IsChecked="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="63"/>
        <CheckBox x:Name="DigitsCb" Content="Digits" Margin="131,38,0,0" IsChecked="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="53"/>
        <CheckBox x:Name="SymbolsCb" Content="" Margin="189,38,0,0" Width="16" IsChecked="True" Height="21" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="SymbolsCb_Checked" Unchecked="SymbolsCb_Unchecked"/>
        <TextBox x:Name="LengthBox" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" Text="15" VerticalAlignment="Top" Width="30"/>
        <Button x:Name="LengthUpBtn" Padding="0,-4,0,0" Content="↑" HorizontalAlignment="Left" Margin="40,36,0,0" VerticalAlignment="Top" Width="18" Height="12" Click="LengthUpBtn_Click"/>
        <Button x:Name="LengthDownBtn" Content="↓" Padding="0,-4,0,0" HorizontalAlignment="Left" Margin="40,47,0,0" VerticalAlignment="Top" Height="12" FontFamily="Arial Black" Width="18" Click="LengthDownBtn_Click"/>
        <TextBox x:Name="AllowedSymbolsBox" IsEnabled="True" HorizontalAlignment="Left" Height="23" Margin="210,36,0,0"
                 VerticalAlignment="Top" Width="108"></TextBox>
        <TextBox x:Name="PeselBox" HorizontalAlignment="Left" Height="23" Margin="10,64,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="238"/>
        <Button x:Name="PeselBtn" Content="PESEL" HorizontalAlignment="Left" Margin="253,64,0,0" VerticalAlignment="Top" Width="65" Height="23" Click="PeselBtn_Click"/>

    </Grid>
</Window>
